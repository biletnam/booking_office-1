<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @railway_station.title %>
</p>

<p>
  <strong>Arrival:</strong>
  <%= @railway_station.arrival.inspect %>
</p>
<p>
  <strong>Departure:</strong>
  <%= @railway_station.departure.inspect %>
</p>


<% if @railway_station.routes.empty? %>
  <p>Not included in any route.</p>
<% else %>
  <p>The station is part of following routes:</p>
  <ul>
    <% @railway_station.routes.each do |route| %>
    <li><%= route.name %></li>
    <% end %>
  </ul>
<% end %>


<p>
  <%= link_to 'Edit', edit_railway_station_path(@railway_station) %> |
  <%= link_to 'Back', railway_stations_path %><br>
  <%= link_to 'Back to index', welcome_index_path %>
</p>