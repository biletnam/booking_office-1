<%= form_for(@ticket) do |f| %>
  <%= render 'common/errors', resource: @ticket %>

  <%= f.hidden_field :train_id %>
  <%= f.hidden_field :start_station_id %>
  <%= f.hidden_field :end_station_id %>

  <div class="field">
    <%= f.label :number %>
    <%= f.text_field :number, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :passenger, "Passenger name", class: "form-control" %>
    <%= f.text_field :passenger %>
  </div>

  <div class="field">
    <%= f.label :passport, "Passport number", class: "form-control" %>
    <%= f.text_field :passport %>
  </div>

  <div class="actions">
    <%= f.submit "Buy ticket", class: "btn btn-default" %>
  </div>
<% end %>
