<% @carriages.each do |carriage| %>
<tr>
  <td><%= carriage.number %></td>
  <td><%= carriage.type %></td>
  <td><%= link_to 'Show', sti_carriage_path(carriage.type, carriage) %></td>
  <td><%= link_to 'Edit', sti_carriage_path(carriage.type, carriage, :edit) %></td>
  <td><%= link_to 'Destroy', sti_carriage_path(carriage.type, carriage), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <td><%= link_to "See all #{carriage.type.pluralize}", sti_carriage_path(carriage.type) %></td>
</tr>  

<% end %>